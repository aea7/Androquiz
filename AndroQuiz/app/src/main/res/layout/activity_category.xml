<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mcagataybarin.androquiz.CategoryActivity"
    android:background="@android:color/background_light">

    <TextView
        android:text="SPORT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/category1"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:layout_alignStart="@+id/c1q5"
        android:layout_alignEnd="@+id/c1q5"
        android:capitalize="characters"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/black" />


    <TextView
        android:text="HISTORY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category2"
        android:gravity="center"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:capitalize="characters"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/category1"
        android:layout_alignBottom="@+id/category1"
        android:layout_alignStart="@+id/c2q5"
        android:layout_alignEnd="@+id/c2q5"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/black"
        />

    <TextView
        android:text="ART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category3"
        android:layout_alignStart="@+id/c3q5"
        android:layout_alignEnd="@+id/c3q5"
        android:layout_alignBottom="@+id/category2"
        android:gravity="center"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:capitalize="characters"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/black"/>

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1q5"
        android:layout_alignStart="@+id/c1q5"
        android:layout_marginTop="10dp"
        android:id="@+id/c1q4"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1q4"
        android:layout_alignEnd="@+id/c1q4"
        android:layout_marginTop="12dp"
        android:id="@+id/c1q3"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c1q5"
        android:layout_centerHorizontal="true"
        android:id="@+id/c2q5"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c1q4"
        android:layout_centerHorizontal="true"
        android:id="@+id/c2q4"
        android:text="400"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/c1q1"
        android:layout_below="@+id/c1q2"
        android:layout_alignStart="@+id/c1q2"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c1q3"
        android:layout_centerHorizontal="true"
        android:id="@+id/c2q3"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c2q1"
        android:layout_alignBaseline="@+id/c1q1"
        android:layout_alignBottom="@+id/c1q1"
        android:layout_alignStart="@+id/c2q3"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c2q1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:id="@+id/c3q1"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/c2q2"
        android:layout_alignEnd="@+id/c3q1"
        android:id="@+id/c3q2"
        android:layout_alignTop="@+id/c2q2"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c2q3"
        android:layout_alignEnd="@+id/c3q2"
        android:id="@+id/c3q3"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/c2q4"
        android:layout_alignEnd="@+id/c3q3"
        android:id="@+id/c3q4"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/c2q5"
        android:layout_alignEnd="@+id/c3q4"
        android:id="@+id/c3q5"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="200"
        android:layout_height="wrap_content"
        android:id="@+id/c2q2"
        android:layout_alignStart="@+id/c2q1"
        android:layout_alignTop="@+id/c1q2"
        android:layout_width="wrap_content"
        android:layout_above="@+id/c1q1"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/c1q5"
        android:id="@+id/gameInfo"
        android:layout_alignEnd="@+id/c2q5" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/c1q2"
        android:layout_below="@+id/c1q3"
        android:layout_alignStart="@+id/c1q3"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:onClick="onClickc1q5"
        android:id="@+id/c1q5"
        android:layout_below="@+id/category1"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:text="RESTART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restartButton"
        android:onClick="restartGame"
        android:layout_below="@+id/c2q1"
        android:layout_alignStart="@+id/c2q1"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/holo_green_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishText"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/c3q1"
        android:textColor="@android:color/holo_red_dark"
        android:capitalize="words"
        android:gravity="center"
        android:textStyle="normal|bold" />


</RelativeLayout>
